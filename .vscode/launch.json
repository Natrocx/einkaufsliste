  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Cargo launch",
      "cargo": {
        "args": [
          "build",
          "--lib"
        ]
      },
      "program": "${cargo:program}",
      "args": []
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'new_frontend'",
      "cargo": {
        "args": [
          "build",
          "--bin=new_frontend",
          "--package=new_frontend"
        ],
        "filter": {
          "name": "new_frontend",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'new_frontend'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=new_frontend",
          "--package=new_frontend"
        ],
        "filter": {
          "name": "new_frontend",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'einkaufsliste'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=einkaufsliste"
        ],
        "filter": {
          "name": "einkaufsliste",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'backend'",
      "env": {
        "RUST_LOG": "debug"
      },
      "cargo": {
        "args": [
          "build",
          "--bin=backend",
          "--package=backend",
          "--features=serve_frontend"
        ],
        "filter": {
          "name": "backend",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'backend'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=backend",
          "--package=backend"
        ],
        "filter": {
          "name": "backend",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}/backend"
    }
  ]
}